<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arjunsk.drawer_activity.Fragment3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_agregarBles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ConectarAgregar" />

        <Button
            android:id="@+id/btn_sendMSJ"
            android:layout_width="match_parent"
            android:text="Enviar Texto"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_height="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="SSID"
            android:ems="10"
            android:id="@+id/et_ssid"
            android:layout_above="@+id/et_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password"
            android:text="password"
            android:layout_above="@+id/btn_sendMSJ"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="51dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

